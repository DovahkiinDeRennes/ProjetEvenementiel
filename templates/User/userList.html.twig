

{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}

<h1>Liste des utilisateurs</h1>
<div class="style back">
    <table >
        <thead>
        <tr>
            <th>*</th>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Pseudo</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr class="test">
                <td>{{ user.id }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.pseudo }}</td>
                <td> <button class="delete"><a href="{{ url('user_supprime',{'id': user.id }) }}">supprimer</a></button></td>
                <td> <button class="delete"><a href="{{ url('user_desac',{'id': user.id }) }}">Desactiver</a></button></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
