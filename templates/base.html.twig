<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">

    {% block javascripts %}
        {{ importmap ('app') }}
    {% endblock %}
</head>


<body>
<header class="margB45">
    <div class="flex row pad ">
        <div class="">
            <a href="{{ '/' }}" class="">
                <img src="{{ asset('images/imageSite.jpg') }}" class="image">
            </a>
        </div>
        <div class="header-content ">

            <div class="f">
                <div class="flex">

                    <h2 class="size">Sortir.com </h2>

                </div>
                <div class="row">
                    <div class="flex">
                        <nav>
                            <ul>
                                {% if is_granted('IS_AUTHENTICATED') %}
                                    <li>
                                        <a href="{{ url('home_home') }}" class="bouton">Accueil</a>
                                    </li>
                                {% endif %}
                                {% if is_granted('ROLE_ADMIN') %}
                                    <li>
                                        <a href="{{ url('admin_place') }}" class="bouton">Gérer les lieux</a>
                                    </li>
                                    <li>
                                        <a href="{{ url('admin_site') }}" class="bouton">Gérer les sites</a>
                                    </li>
                                    <li>
                                        <a href="{{ url('admin_registerUser') }}" class="bouton">Créer un membre</a>
                                    </li>
                                    <li>
                                        <a href="{{ url('admin_registerUsers') }}" class="bouton">Créer des membres</a>
                                    </li>
                                    <li>
                                        <a href="{{ url('user_list') }}" class="bouton">Listes des membres</a>
                                    </li>
                                {% endif %}
                            </ul>
                        </nav>
                    </div>

                </div>
            </div>

        </div>
    </div>
    <div class="flex left-content pad3">
        <nav>
            <ul>
                {% if is_granted('IS_AUTHENTICATED') %}
                    <li><a href="{{ path('app_logout') }}" class="bouton">Se déconnecter</a></li>
                    <li>
                        {% if app.user.picture %}
                            <a href="{{ url('user_updateUser', {'id': app.user.id }) }}"><img src="{{ asset('uploads/' ~ app.user.picture) }}" alt="Photo de profil" class="image"></a>
                        {% else %}
                            <a href="{{ url('user_updateUser', {'id': app.user.id }) }}"><img src="{{ asset('/images/chatprofil.png') }}" alt="Photo de profil par défaut" class="image"></a>
                        {% endif %}
                    </li>
                {% else %}
                    <li><a href="{{ path('app_login') }}" class="bouton">Se connecter</a></li>
                    <li><a href="{{ path('app_register') }}" class="bouton">S'inscrire</a></li>
                {% endif %}
            </ul>
        </nav>
    </div>

</header>
<body >
<div class="message">
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ type }}">
                {{ message | raw }}
            </div>
        {% endfor %}
    {% endfor %}
</div>
<div class="centrage">
<div class="container">

<div class="style">
{% block body %}
{% endblock %}
</div>
</div>
</body>
<footer class="margT45">
    <div class="footer-content">©Les Assassymfonystes</div>
</footer>


{% block js %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
</html>
