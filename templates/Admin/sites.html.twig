{% extends "base.html.twig" %}

{% block title %}{{ parent() }}: Accueil{% endblock %}


{% block body %}
    <table >
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Site</th>
            {% if is_granted('ROLE_ADMIN') %}
                <th scope="col">Supprimez</th>
            {% endif %}
        </tr>
        </thead>
        <tbody>
        {% for site in sites %}
            <tr>
                <th scope="row">{{ site.id }}</th>

                <td>{{ site.nom }}</td>

            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ url('admin_createSite') }}">Ajouter</a>

{% endblock %}

