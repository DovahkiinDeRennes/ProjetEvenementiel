{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Enregistrement d'un nouvel utilisateur</h1>

    {{ form_errors(form) }}

    {{ form_start(form) }}
    {{ form_row(form.email) }}
    {{ form_row(form.pseudo) }}
    {{ form_row(form.picture_file) }}
    {{ form_row(form.nom) }}
    {{ form_row(form.prenom) }}
    {{ form_row(form.telephone) }}
    {{ form_row(form.siteId) }}
    {{ form_row(form.password, {
        label: 'Password'
    }) }}
    {{ form_row(form.agreeTerms) }}
    {{ form_end(form) }}
{% endblock %}